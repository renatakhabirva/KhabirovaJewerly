<Window x:Class="KhabirovaJewerly.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KhabirovaJewerly"
        mc:Ignorable="d"
        Title="KhabirovaJewerly" MinHeight="500" MinWidth="800" WindowStartupLocation="CenterScreen" Icon="Resources\icon.ico" FontSize="30" FontFamily="Comic Sans MS">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Image Source="pictures\logo.png" Width="50"></Image>
                <TextBlock Text="ООО Украшение"></TextBlock>
            </StackPanel>
           
        </StackPanel>
        <Button Content="Выйти" x:Name="Exit" Click="Exit_Click" HorizontalAlignment="Right"/>
        <Frame Grid.Row="2" Name="MainFrame" Source="MainPage" ></Frame>
    </Grid>
</Window>
